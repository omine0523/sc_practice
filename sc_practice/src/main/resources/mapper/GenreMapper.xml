<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.GenreMapper">

	<!-- GenreエンティティとDBカラムのマッピング定義をする -->
	<resultMap id="GenreResultMap"
		type="com.example.demo.entity.Genre">
		<id column="genre_id" jdbcType="INTEGER" property="genreId" />
		<result column="genre_name" jdbcType="VARCHAR"
			property="genreName" />
	</resultMap>
	
	<!-- 検索条件：ジャンルの選択肢取得用SQL（セレクトボタンの選択して活用を目的とする） -->
	<select id="selectAllGenres" resultMap="GenreResultMap">
        SELECT 
        	  genre_id
        	, genre_name 
        FROM 
        	genre
        ORDER BY genre_id
    </select>
    
</mapper>